<aura:component access = "global">
    <aura:attribute name = "product" type = "Store_Product__c" 
                    default ="{'Id':'a0C5e000000U8m4EAC',
                              'Name':'New stuff', 'Price_Per_Unit__c':20, 'Rating__c':'3.4'}"/>
    <aura:attribute name = "productImage" type = "String" default = "$Resource.product" />
    <aura:attribute name = "productName" type = "String" default = "Lorem Ipsum" />
    <aura:attribute name = "productRating" type = "Integer" default = "5" />
    <aura:attribute name = "productPrice" type = "Decimal" default = "0.00" />
    
    <aura:registerEvent name = "productSelected" type = "c:ProductSelected" />
    
    <div id = "product-holder" onclick="{!c.productSelected}">
        <img id = "product-image" value = "{!v.productImage}" />
        <p id = "product-name">{!v.productName}</p>
        <p class = "details">{!v.productRating}</p>
        <p class = "details">${!v.productPrice}</p>
    </div>
</aura:component>